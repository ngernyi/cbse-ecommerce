<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core">

    <reference id="cartService" interface="com.mycompany.ecommerce.api.CartService"/>

    <bean id="cartRestService" class="com.mycompany.ecommerce.cart.rest.CartRestService">
        <property name="cartService" ref="cartService"/>
    </bean>

    <jaxrs:server id="cartRestServer" address="/api/cart">
        <jaxrs:serviceBeans>
            <ref component-id="cartRestService"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
             <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</blueprint>
