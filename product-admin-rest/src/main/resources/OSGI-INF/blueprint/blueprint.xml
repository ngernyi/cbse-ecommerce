<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core">

    <reference id="productAdminService" interface="com.mycompany.ecommerce.api.ProductAdminService"/>

    <bean id="productAdminRestService" class="com.mycompany.ecommerce.product.admin.rest.ProductAdminRestService">
        <property name="productAdminService" ref="productAdminService"/>
    </bean>

    <jaxrs:server id="productAdminRestServer" address="/api/admin">
        <jaxrs:serviceBeans>
            <ref component-id="productAdminRestService"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
             <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</blueprint>
